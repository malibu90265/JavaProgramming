<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- project 기본 관리 -->
	<bean id="projectDAO" class="com.sqisoft.iqs.project.dao.ProjectDAOImpl">
		<property name="sqlSessionTemplate" ref="sqlSession"/>
	</bean>
	
	<bean id="projectService" class="com.sqisoft.iqs.project.service.ProjectServiceImpl">
		<property name="projectDAO" ref="projectDAO"/>
	</bean>
	
	<!-- project 손익 관리 -->
	<bean id="pjProfitAndLossService" class="com.sqisoft.iqs.project.service.PjProfitAndLossServiceImpl">
		<property name="projectDAO" ref="projectDAO"/>
		<property name="teamDAO" ref="teamDAO"/>
	</bean>
	
	<!-- project 주간 보고  -->
	<bean id="pjProgressDAO" class="com.sqisoft.iqs.project.dao.PjProgressDAOImpl">
		<property name="sqlSessionTemplate" ref="sqlSession"/>
	</bean>
	
	<bean id="pjProgressService" class="com.sqisoft.iqs.project.service.PjProgressServiceImpl">
		<property name="pjProgressDAO" ref="pjProgressDAO"/>
	</bean>
	
	<!-- project 예산 관리 -->
	<bean id="pjBudgetDAO" class="com.sqisoft.iqs.project.dao.PjBudgetDAOImpl">
		<property name="sqlSessionTemplate" ref="sqlSession"/>
	</bean>
	
	<bean id="pjBudgetService" class="com.sqisoft.iqs.project.service.PjBudgetServiceImpl">
		<property name="pjBudgetDAO" ref="pjBudgetDAO"/>
		<property name="projectDAO" ref="projectDAO"/>
		<property name="humanResourceDAO" ref="humanResourceDAO"/>
		<property name="teamDAO" ref="teamDAO"/>
		<property name="totalDAO" ref="totalDAO"/>
	</bean>
	
</beans>
