/* Top Navigation : Login */
.codrops-top {
	width: 100%;
	text-transform: uppercase;
	font-weight: 700;
	font-size: 22px;
	z-index: 20;
}

.codrops-top a {
	display: inline-block;
	text-decoration: none;
	letter-spacing: 1px;
	color: #3a3a3d;
}

.codrops-top a:hover {
	color: #d85270;
}

.codrops-top span.right {
	padding: 12px 15px 0 15px;
	float: right;
	clear: inherit;
}

.codrops-top span.right a {
	display: block;
	float: left;
	clear: inherit;
}

/* logo top */
.codrops-top span.left {
	padding: 10px 15px 0 15px;
	float: left;
	clear: inherit;
}

.codrops-top span.left a {
	display: block;
	float: left;
	clear: inherit;
}

.logo_img {
	display: inline-block;
	position: relative;
	width: 47px;
}

/* logout span tag */
.codrops-icon:before {
	margin: 0 4px;
	text-transform: none;
	font-weight: normal;
	font-style: normal;
	font-variant: normal;
	line-height: 0.5;
	speak: none;
	-webkit-font-smoothing: antialiased;
}

/* Top Navigation mini version : Login + my Menu */
.codrops-top_mini {
	width: 100%;
	height: 50px;
	z-index: 20;
	text-transform: uppercase;
	font-weight: 700;
	font-family: "Nanum Gothic";
	background-color: #3498d3;
	position: fixed;
	overflow: hidden;
}

.codrops-top_mini a {
	display: inline-block;
	text-decoration: none;
	letter-spacing: 1px;
	color: #ffffff;
}

.codrops-top_mini a:hover {
	color: #8bdae4;
}

.codrops-top_mini span.right {
	padding: 12px 15px 0 15px;
	font-size: 22px;
	float: right;
	clear: inherit;
}

.codrops-top_mini span.right a {
	display: block;
	float: left;
	clear: inherit;
}

/* logo top */
.codrops-top_mini span.left {
	padding: 10px 15px 0 15px;
	float: left;
	clear: inherit;
}

.codrops-top_mini span.left a {
	display: block;
	float: left;
	clear: inherit;
}

/* my menu toggle button */
#my_menu_button {
	padding: 12px 15px 0 30px;
	font-size: 22px;
	float: left;
	color: #FFFFFF;
	cursor: pointer;
	clear: inherit;
}

/* my menu mini version */
.my_menu_each {
	padding: 12px 15px 0 15px;
	font-size: 22px;
	float: left;
	color: #FFFFFF;
	cursor: pointer;
	clear: inherit;
}

/* Related : footer */
.footerDiv {
	width: 100%;
	margin-top: 10px;
	height: 180px;
	background: #ffffff;
	z-index: 20;
	overflow: hidden;
	font-size: 18px;
	line-height: 20%;
}

.noticeDiv {
	width: 1290px;
	display: inline-block;
	margin-bottom: 10px;
}

.noticeDiv span {
	float: left;
	clear: right;
}

#sss {
	font-weight: bold;
}

#bottom {
	position: fixed;
	width: 100%;
	height: 180px;
	bottom: 0;
	text-align: center;
	background: #ffffff;
}


.related {
	display: inline-block;
	padding-top: 3em;
}

.related p {
	font-size: 1.15em;
}

.related>a {
	vertical-align: top;
	width: calc(100% - 20px);
	max-width: 340px;
	display: inline-block;
	text-align: center;
	margin: 20px 10px;
	padding: 25px;
}

.related a img {
	max-width: 100%;
	opacity: 0.8;
	border-radius: 4px;
}

.related a:hover img, .related a:active img {
	opacity: 1;
}

.related a h3 {
	margin: 0;
	padding: 0.5em 0 0.3em;
	max-width: 300px;
	text-align: left;
}

/* browser resizing */
@media screen and (max-width: 27em) {
	.codrops-header, .related {
		font-size: 75%;
	}
	.codrops-icon {
		font-size: 1.5em;
	}
	.codrops-icon span {
		display: none;
	}
}

/* password change popup */
.layer {
	display: none;
	position: fixed;
	_position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 100;
}

.layer .bg {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #000;
	opacity: .5;
	filter: alpha(opacity = 50);
}

.layer .pop-layer {
	display: block;
}

.pop-layer {
	display: none;
	position: absolute;
	top: 50%;
	left: 50%;
	width: 410px;
	height: auto;
	background-color: #fff;
	border: none;
	z-index: 10;
}

.pop-layer .pop-container {
	padding: 20px 25px 50px 20px;
}

.pop-layer .btn-r {
	width: 100%;
	margin: 10px 0 10px;
	padding-top: 10px;
	border-top: 1px solid #DDD;
	text-align: right;
}

/* 비밀번호 변경 버튼 */
/* 닫기 버튼 */
button.submit, a.cbtn {
	background: none repeat scroll 0 0 #2E9FFF;
    border: medium none;
    border-radius: 5px 5px 5px 5px;
    box-shadow: none;
    color: #FFFFFF;
    font-size: 16px;
    font-weight: normal;
    line-height: 26px;
    float: right;
    padding: 8px 12px;
    margin-left: 10px;
    width: 17%;
    clear: inherit;
}

#changePasswordForm h1 {
	padding-bottom: 17px;
}
/* 비밀번호 입력 칸 */
#changePasswordForm input[type="password"] {
	transition: background 0.5s ease 0s, border-color 0.5s ease 0s;
	font-size: 16px;
	line-height: 26px;
	color: #525355;
	text-align: center;
	display: inline-block;
	vertical-align: middle;
	width: 100%;
	height: 44.2px;
	margin: 0;
	margin-bottom: 10px;
	padding: 4px 6px;
	border: 1px solid #A3ACB8;
	border-radius: 3px 3px 3px 3px;
	box-shadow: 0 2px 0 rgba(0, 0, 0, 0.08) inset;
}

/* 상단의 비밀번호 변경 버튼 */
#pwdChangeBtn {
	background: transparent;
	border: none;
	font-weight: 700;
	font-size: 22px;
	font-family: 'Nanum Gothic';
}

#pwdChangeBtn:hover {
	color: #d85270;
}