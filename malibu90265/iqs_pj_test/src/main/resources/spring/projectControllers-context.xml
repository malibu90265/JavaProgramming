<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="projectController" class="com.sqisoft.iqs.project.controller.ProjectController" >
		<property name="projectService" ref="projectService"/>
		<property name="teamService" ref="teamService"/>
	</bean>
	
	<bean id="pjprofitAndLossController" class="com.sqisoft.iqs.project.controller.PjProfitAndLossController">
		<property name="pjProfitAndLossService" ref="pjProfitAndLossService" />
		<property name="teamService" ref="teamService" />
		<property name="projectService" ref="projectService"/>
	</bean>
	
	<bean id="pjProgressController" class="com.sqisoft.iqs.project.controller.PjProgressController">
		<property name="pjProgressService" ref="pjProgressService"/>
		<property name="projectService" ref="projectService"/>
		<property name="teamService" ref="teamService"/>
	</bean>

	<!-- 프로젝트 예산 -->
	<bean id="pjBudgetController" class="com.sqisoft.iqs.project.controller.PjBudgetController">
		<property name="pjBudgetService" ref="pjBudgetService"/>
		<property name="projectService" ref="projectService"/>
		<property name="teamService" ref="teamService"/>
	</bean>
	
</beans>
